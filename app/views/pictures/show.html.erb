<% content_for :title do %>
<% @scores.each do |score| %>
<%= tag :meta, class:"score", score: score.points, name: score.name %>
<% end %>
<% @characters.each do |char| %>
<%= tag :meta, class:"character", name: char.name, x: char.x, y: char.y %>
<% end %>
<% end %>

<div id="score"></div>
<div id="image-container" data-id="<%= @picture.id %>">
    <%= image_tag(@picture.file_name) %>
</div>
<div id="highscore-list">
    <table>
        <tr>
            <th>
                Name
            </th>
            <th>
                Score
            </th>
        </tr>
        <% @scores.each do |score| %>
        <tr>
            <td>
                <%= score.name %>
            </td>
            <td>
                <%= score.points %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
